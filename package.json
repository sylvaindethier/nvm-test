{
  "name": "nvm-test",
  "version": "0.0.1",
  "description": "Runs `npm test` using different Node versions with NVM",
  "bin": {
    "nvm-test": "./bin/nvm-test.js"
  },
  "scripts": {
    "start": "babel-node ./src/nvm-test.js",
    "clean": "rimraf lib",
    "prebuild": "npm run clean && eslint",
    "build": "npm run build:lib",
    "build:lib": "babel src -d lib",
    "postbuild": "npm run test+coverage",
    "test": "echo 'No test provided yet.'; exit 0",
    "coverage": "echo 'No coverage provided yet.'; exit 0",
    "test+coverage": "npm run test && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylvaindethier/nvm-test.git"
  },
  "keywords": [
    "nvm-test",
    "nvm",
    "test",
    "npm",
    "node",
    "versions"
  ],
  "author": "Sylvain Dethier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylvaindethier/nvm-test/issues"
  },
  "homepage": "https://github.com/sylvaindethier/nvm-test#readme",
  "dependencies": {
    "babel-runtime": "^6.5.0",
    "commander": "^2.9.0",
    "npmlog": "^2.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-3": "^6.5.0",
    "eslint": "^2.2.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-standard": "^1.3.2"
  }
}
