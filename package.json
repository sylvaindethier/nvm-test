{
  "name": "nvm-test",
  "version": "0.0.1",
  "description": "Test using different Node versions with NVM",
  "bin": {
    "nvm-test": "./bin/nvm-test.js"
  },
  "scripts": {
    "start": "babel-node ./src/nvm-test.js",
    "clean": "rimraf lib coverage",
    "prebuild": "npm run clean && eslint ./",
    "build": "babel src -d lib",
    "postbuild": "npm run test+coverage",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "coverage": "rimraf coverage && istanbul cover _mocha -- -R spec --compilers js:babel-core/register --recursive",
    "test+coverage": "npm run test && npm run coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylvaindethier/nvm-test.git"
  },
  "keywords": [
    "nvm-test",
    "nvm",
    "test",
    "npm",
    "node",
    "versions"
  ],
  "author": "Sylvain Dethier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylvaindethier/nvm-test/issues"
  },
  "homepage": "https://github.com/sylvaindethier/nvm-test#readme",
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "commander": "^2.9.0",
    "npmlog": "^2.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.6.0",
    "babel-core": "^6.6.0",
    "babel-eslint": "^5.0.0",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-3": "^6.5.0",
    "coveralls": "^2.11.8",
    "eslint": "^2.2.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-standard": "^1.3.2",
    "expect": "^1.14.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5"
  }
}
